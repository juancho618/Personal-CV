extends layout
block content
    link(rel="styleSheet", href="/static/css/contact.css", type="text/css")

    div#contactImgHeader
        h1.bgAboutText Contact
    div#contactBlock(ng-controller="contactController")
        div.container-fluid
            div.row
                div.col-md-12
                    div.form-style-6
                        h1 Send me a message
                        form(name="contactForm", ng-submit="submitForm(contactForm.$valid)" novalidate)
                            input(type="text", name="name", placeholder="Your Name", required="required", ng-model="contact.name")
                            input(type="email", name="email", placeholder="Email Address", required="required", ng-model="contact.email")
                            textarea(name="message", rows=5, placeholder="Type your Message", required="required", ng-model="contact.message")
                            input(type="submit", value="send")
    footer
        div
            i.fa.fa-envelope.fa-2x.fa-fw
            | jjsoriano@gmail.com
        div
            i.fa.fa-phone.fa-2x.fa-fw
            | +32 0483 47 23 27
        div
            i.fa.fa-map-marker.fa-2x.fa-fw
            | Brussels, Belgium


